  		<%= button_to('Logout', destroy_user_session_path, method: :delete, 
          class: 'btn btn-sm btn-default') %>
  </li>
<% else %>
  <li>
  	<span>
  	<h5 style="margin-top: 14%; padding-right: 5px;">
