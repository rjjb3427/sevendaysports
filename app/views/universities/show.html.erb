<div class="container">
	<div><%= link_to :back, universities_path %></div>
	<br />
	<div class="panel panel-default" style="width: 50%;">
		<div class="panel-heading">
			<h3 class="panel-title"><%= @university.name %></h3>
		</div>
		<div class="panel-body">
			<ul class="list-group">
				<li class="list-group-item"><b>Name</b>: <%= @university.name %></li>
				<li class="list-group-item"><b>Url</b>: <%= @university.url %></li>
				<li class="list-group-item"><b>Address</b>: <%= @university.address %></li>				
				<li class="list-group-item"><b>City</b>: <%= @university.city %></li>
				<li class="list-group-item"><b>State</b>: <%= @university.state %></li>
				<li class="list-group-item"><b>Zip</b>: <%= @university.zip %></li>
			</ul>
		</div>
	</div><!-- END CLASS panel panel-default -->
	<div class="row-fluid">
		<%= button_to :edit, edit_university_path(@university),
				options = {
										method: :get, 
										class: 'btn btn-sm btn-default'
									} %>

		<%= button_to :delete, university_path(@university), 
				options = {
										method: :delete,
										confirm: 'You sure?',
										class: 'btn btn-sm btn-danger'
									} %>
	</div><!-- END class row-fluid -->
	<%= link_to :back, universities_path %>
</div><!-- END CLASS container -->
<div class="container">
	<div class="row-fluid">
		<hr />
	</div>
</div><!-- END CLASS container -->
<div class="container">
	<div class="row-fluid">
		<%#= render 'team_management' %>
	</div>
</div><!-- END CLASS container -->
