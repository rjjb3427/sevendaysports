<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div>
  	<%= f.email_field :email, autofocus: true, placeholder: 'Email address' %>
  </div>

  <div>
  	<%= f.password_field :password, placeholder: 'Password' %>
  </div>

  <div>
  	<%= f.password_field :password_confirmation, placeholder: 'Password confirmation' %>
  </div>
  <div>
  	<%= f.text_field :first_name, placeholder: 'First name' %>
  </div>
  <div>
  	<%= f.text_field :last_name, placeholder: 'Last name' %>
  </div>
  <div>
  	<%= f.text_area :address, placeholder: 'Address', size: "31x5" %>
  </div>
  <div>
  	<%= f.text_field :city, placeholder: 'City' %>
  </div>
  <div>
  	<%= f.text_field :state, placeholder: 'State' %>
  </div>
  <div>
  	<%= f.text_field :zip, placeholder: 'Zip code' %>
  </div>
  <div>
  	<%= f.date_select :dob, start_year: 1950 %>
  </div>
  <div>
  	<%= f.text_field :school_name, placeholder: 'Name of current school' %>
  </div>
  <br />
  <div>
  	<%= f.submit "Sign up", class: 'btn btn-large btn-primary' %>
  </div>
<% end %>
 - or -
<%= render "devise/shared/links" %>
