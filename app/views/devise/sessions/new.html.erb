<div id="main" class="container">
	<div id="content" class="content bg-base section">	
		<div class="ribbon ribbon-highlight">
			<ol class="breadcrumb ribbon-inner">
				<li><%= link_to 'Home', root_path %></li>
				<li><%= link_to 'Users', users_path %></li>
				<li class="active" title="universities/new"><em>Login</em></li>
			</ol>
		</div><!--/.ribbon.ribbon-highlight-->
			<h3 class="page-title" style="margin-left: 35.5%;">
				<em style="color: #6699CC">Login</em>
			</h3>

			<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), 
					html: { 
									role: 'form', 
									class: 'form-horizontal', 
									style: 'margin-left: 33%;' 
								}) do |f| %>
			  <div class="form-group">
			  	<%= f.label :email %><br />
			  	<%= f.email_field :email, :autofocus => true, 
			  			class: 'form-control input-lg',
			  			style: 'width: 50%;' %>
			  </div>

			  <div class="form-group">
			  	<%= f.label :password %><br />
			  	<%= f.password_field :password,
			  			class: 'form-control input-lg',
			  			style: 'width: 50%;' %>
			  </div>

			  <% if devise_mapping.rememberable? -%>
			    <div class="form-group">
			    	<%= f.check_box :remember_me, class: 'form-control input-lg', style: 'width: 4%;' %> 
			    	<%= f.label :remember_me %>
			    </div>
			  <% end -%>

			  <div class="form-group" style="margin-left: 15%;">
			  	<%= f.submit "Sign in", class: 'btn btn-lg btn-primary' %>
			  	<%= link_to root_path  do %>
			  		<button class="btn btn-sm btn-danger">
			  			Cancel
			  		</button>
			  	<% end %>
			  </div>
			  	<%#= render "devise/shared/links" %>
			<% end %>
			<div class="form-group">
				
			</div>
	</div><!--/#content.content.bg-base.section-->
</div><!--/#main.container-->
