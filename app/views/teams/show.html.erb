<div class="container">
	<h1>Teams#show</h1>
	<p>Find me in app/views/teams/show.html.erb</p>
	<%= link_to :back, university_path(@university) %>
	<br />
	<div class="table-responsive" style="width: 50%;">
		<table class="table table-striped table-bordered">
			<thead>
				<th>Name</th>
				<th>Sport Type</th>
				<th>Edit</th>
				<th>Delete</th>
			</thead>
			<tbody>
				<tr>
					<td>
						<%= @team.name %>
					</td>
					<td>
						<%= @team.sport_type %>
					</td>
					<% if current_user.try(:admin?) %>
						<td>
							<%= button_to :edit, 
									edit_university_team_path(university_id: @university, id: @team),
									options = {
															method: :get,
															class: 'btn btn-sm btn-default'
														} %>
						</td>
						<td>
							<%= button_to :delete, university_team_path(university_id: @university, id: @team),
									options = {
															method: :delete,
															confirm: 'You sure?',
															class: 'btn btn-sm btn-danger'
														} %>
						</td>
					<% end %>
				</div>
				</tr>
			</tbody>
		</table>
	</div><!-- END CLASS table-responsive -->
</div><!-- END CLASS container -->
