<div id="main" class="container">
	<div id="content" class="content bg-base section">	
		<div class="ribbon ribbon-highlight">
			<ol class="breadcrumb ribbon-inner">
				<li><%= link_to 'Home', root_path %></li>
				<li><%= link_to 'Teams', teams_path %></li>
				<li class="active" title="teams/new"><em>New Team</em></li>
			</ol>
		</div><!--/.ribbon.ribbon-highlight-->
		<h3 class="page-title" style="margin-left: 35.5%;">
			<em style="color: #FF3333">Edit</em> 
			<small><%= "#{ @team.name }" %></small>
		</h3>
		<%= form_for [@university, @team], 
				html: { 
								class: 'form-horizontal',
								role: 'form',
								style: 'margin-left: 35%;'
							} do |f| %>
			<div class="form-group">
				<%= f.text_field :name, class: 'text-field form-control input-lg', 
						placeholder: 'Team name',
						style: 'width: 50%;' %>
			</div>
			<div class="form-group">
				<%= select_tag :sport_type, 
						options_for_select([
											          	['Baseball/Softball', 1], 
																	['Basketball', 2], 
																	['Golf', 3], 
																	['Soccer', 4], 
																	['Track & Field', 5]
																]), 
						class: '' %>
			</div>
			<div class="form-group">
				<%= link_to do %>
					<%= button_to :update, university_path(@university), 
							options = { 
													class: 'btn btn-lg btn-success', 
													style: 'display: inline; margin-left: 16%;' 
												} %>
				<% end %>
				<%= button_to :cancel, university_team_path(university_id: @university, id: @team), 			options = { 
												method: :get, 
												class: 'btn btn-danger',
												style: 'margin-left: 29%; margin-top: -10.5%;'
											} %>
			</div>
		<% end %>
	</div><!--/#content.content.bg-base.section-->
</div><!--/#main.container-->
