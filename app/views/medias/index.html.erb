<div class="container">	
	<% if @medias.blank? %>
		<h3><small>No Medias Exist</small></h3>
		<%= render 'first_object' %>
	<% else %>
		<% @medias.each do |media| %>
		<%= link_to :back %>
		<br />
		<div class="table-responsive">
			<table class="table table-bordered">
				<thead>
					<th>Title</th>
					<th>Url</th>
					<th>Details</th>
					<th>Author</th>
				</thead>
				<tbody>
					<tr>
						<td><%= media.title %></td>
						<td><%= media.url %></td>
						<td><%= media.details %></td>
						<td><%= media.author %></td>
					</tr>
				</tbody>
			</table>
		</div><!-- END class table-responsive -->
		<% end %>
	<% end %>
</div><!-- END class container -->
