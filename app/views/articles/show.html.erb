<div class="container">
	<div><%= link_to :back, articles_path %></div>
	<br />
	<div class="panel panel-default" style="width: 50%;">
		<div class="panel-heading">
			<h3 class="panel-title"><%= @article.title %></h3>
		</div>
		<div class="panel-body">
			<ul class="list-group">
				<li class="list-group-item"><b>Title</b>: <%= @article.title %></li>
				<li class="list-group-item"><b>Body</b>: <%= @article.body %></li>
				<li class="list-group-item"><b>Author</b>: <%= @article.author %></li>				
			</ul>
		</div>

	</div><!-- END CLASS panel panel-default -->
	<% if current_user.try(:admin?) %>
		<div class="btn-toolbar">
			<div class="btn-group">
				<%= button_to :edit, edit_article_path(@article),
						options = {
												method: :get,
												class: 'btn btn-sm btn-default',
												style: 'display: inline-block;'
											} %>

				<%= button_to :delete, article_path(@article),
						options = {
												method: :delete,
												class: 'btn btn-sm btn-danger', 
												style: 'display: inline-block;'
											} %>
			</div>
		</div>
	<% end %>
	<%= link_to :back, articles_path %>
</div><!-- END CLASS container -->
