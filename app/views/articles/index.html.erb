<div class="container">	
	<% if @articles.blank? %>
		<h3><small>No Article Exists</small></h3>
		<em><%= render 'first_object' %></em>
	<% else %>
	<h3>Articles</h3>
	<%= link_to :back, articles_path %>
	<% if current_user.try(:admin?) %>
		<%= button_to 'Create an Article', new_article_path, 
				options = { 
										method: :get, 
										class: 'btn btn-primary pull-right', 
										style: 'margin-bottom: 2%;' 
									} %>
	<% end %> 
	<br />
	<div class="table-responsive">
		<table class="table table-bordered">
			<thead>
				<th>Title</th>
				<th>Author</th>
				<th>Created on</th>
				<th>View</th>
				<% if current_user.try(:admin?) %>
					<th>Edit</th>
					<th>Delete</th>
				<% end %>
			</thead>
			<tbody>
				<% @articles.each do |article| %>
				<tr>
					<td><%= article.title %></td>
					<td><%= article.body %></td>
					<td><%= article.created_at.strftime("%A %B %d, %Y") %></td>
					<td>
						<%= button_to :view, article_path(article), 
								options = { 
														method: :get,
														class: 'btn btn-xs btn-info'
													} %>
					</td>
					<% if current_user.try(:admin?) %>
						<td>
							<%= button_to :edit, edit_article_path(article),
									options = {
															method: :get, 
															class: 'btn btn-xs btn-default'
														} %>
						</td>
						<td>
							<%= button_to :delete, article_path(article),
									options = {
															method: :delete,
															confirm: 'You sure?',
															class: 'btn btn-xs btn-danger'
														} %>
						</td>
					<% end %>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div><!-- END class table-responsive -->
	<% end %>
</div><!-- END class container -->
