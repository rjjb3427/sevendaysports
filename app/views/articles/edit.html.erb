<h3>Edit an Article</h3>
<%= link_to :back, articles_path %>
<br />
<%= form_for @article, html: { class: 'form-horizontal' } do |f| %>
<% if @article.errors.any? %>
		<div class="error_messages">
			<h3>Please correct the following errors.</h3>
			<ul>
				<% @article.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<%= f.text_area :body, placeholder: 'Enter article here' %>
	<%= f.text_field :title, placeholder: 'Enter an article title' %>
	<%= f.text_field :author, placeholder: 'Tell us your name' %>
	<%= f.submit 'Update Article!', class: 'btn btn-large btn-success' %>
	<%= button_to :cancel, articles_path, options = { method: :get, class: 'btn btn-sm btn-danger' } %>
<% end %>
