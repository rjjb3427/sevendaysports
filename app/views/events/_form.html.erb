<h3>Create an Event</h3>
<%= link_to :back %>
<br />
<%= form_for [@team, @event], html: { class: 'form-horizontal' } do |f| %>
	<%= f.text_field :author, class: 'text_field', placeholder: 'Your name' %>
	<%= f.text_field :name, class: 'text_field', placeholder: 'Event name' %>
	<%= f.text_field :title, class: 'text_field', placeholder: 'Title of event' %>
	<%= f.text_field :kind, class: 'text_field', placeholder: 'Sport type' %>
	<%= f.text_field :home_team_score, class: 'text_field', placeholder: 'Home team score' %>
	<%= f.text_field :away_team_score, class: 'text_field', placeholder: 'Away team away_team_score' %>
	<%= f.text_field :winner, class: 'text_field', placeholder: 'Winning team name' %>
	<%= f.text_area :details, class: 'text_area', placeholder: 'Details about the event' %>
	<%= f.datetime_select :event_on, class: 'datetime_select' %>
	<%= button_to 'Create Event!', name: 'commit', value: 'Create Event!', class: 'btn btn-primary btn-large' %>
<% end %>
<%= link_to 'cancel', :back, class: 'btn btn-small btn-danger' %>
